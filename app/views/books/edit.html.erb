<div class = "container">
  <div class = "row">
    <div class = "col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>Editing Book </h2>

      <%= form_with model:@book,local:true do |f| %>

        <div class="field">
          <%= f.label :title %><br />
          <%= f.text_field :title, autofocus: true, autocomplete: "title" %>
        </div>

        <div class = "field">
          <%= f.label :opinion %><br />
          <%= f.text_area :body, autofocus: true %>
        </div>

        <div class="actions">
          <%= f.submit "Update Book" %>
        </div>
      <% end %>
      <%= link_to 'Show', book_path(@book) %>
      <%= link_to 'Back', books_path %>

    </div>
  </div>
</div>