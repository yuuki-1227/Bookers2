<div class = "container px-5 px-sm-0">
  <div class = "row">

<div class = "col-md-3">
  <div class = "User-information">
    <h2>User Info</h2>
    <div class = "img"><%= attachment_image_tag current_user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %></div>
    <table class ="table">
      <tr>
        <td>name</td>
        <td><%= current_user.name %></td>
      </tr>
      <tr>
        <td>introduction</td>
        <td><%= current_user.introduction %></td>
      </tr>
    </table>
      <%= link_to edit_user_path(current_user) do %>
      <i class="fas fa-user-cog"></i>
      <% end %>
  </div>
  <div class = "New-book">
    <h2 class ="mt-3">New book</h2>
    <%= form_with model:@book, local:true do |f| %>
    <div class = "new-book-title">
      <label for = "book_title">Title</label><br />
      <%= f.text_field :title %>
    </div>
    <div class = "new-book-body">
      <label for = "book_body">Opinion</label><br />
      <%= f.text_area :body %>
    </div>
    <div class = "new-book-body"><%= f.submit 'Create Book' , class: "btn btn-secondary" %></div>
    <% end %>
  </div>
</div>

<div class = "col-md-8 offset-md-1">
  <div class = "books-index">
    <h3>Users</h3>
    <table class = "table">
      <thead>
        <tr>
          <th>image</th>
          <th>name</th>
          <th></th>
          <th colspan = "3"></th>
        </tr>
      </thead>
      <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= attachment_image_tag user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %></td>
          <td><%= user.name %></td>
          <td></td>
          <td><%= link_to 'Show', user_path(user.id) %></td>
        </tr>
      <% end %>
      <%= paginate @users %>
      </tbody>
    </table>
  </div>
</div>
  </div>
</div>
