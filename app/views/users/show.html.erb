<div class = "container">
  <div class = "row">

<div class = "col-lg-4">
  <div class = "User-information">
    <h3>User Info</h3>
    <%= attachment_image_tag @user, :profile_image_id, :fill, 60, 60, fallback: "no_image.jpg" %>
    <p>name</p>
    <p>introduction</p>
    <%= link_to "edit_profile", edit_user_registration_path %>
  </div>
  <div class = "New-book">
    <h3>New book</h3>
    <%= form_with model:@book, local:true do |f| %>
    <div class = "new-book-title">
      <label for = "book_title">Title</label>
      <%= f.text_field :title %>
    </div>
    <div class = "new-book-body">
      <label for = "book_body">Opinion</label>
      <%= f.text_area :body %>
    </div>
    <div class = "action"><%= f.submit 'Create Book' %></div>
    <% end %>
  </div>
</div>

<div class = "col-lg-8">
  <div class = "books-index">
    <h3>Books</h3>
    <table class = "table table-striped">
      <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          <th colspan = "3"></th>
        </tr>
      </thead>
      <tbody>
      <% @user.books.each do |book| %>
        <tr>
          <td><%= attachment_image_tag @user, :profile_image_id, :fill, 60, 60, fallback: "no_image.jpg" %><td>
          <td><%= link_to book.title, book_path(book.id) %></td>
          <td><%= book.body %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
</div>
</div>