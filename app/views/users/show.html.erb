<div class = "container px-5 px-sm-0">
  <div class = "row">

<div class = "col-md-3">
  <div class = "User-information">
    <h2>User Info</h2>
    <div class ="img"><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %></div>
    <table class ="table">
      <tr>
        <td>name</td>
        <td><%= @user.name %></td>
      </tr>
      <tr>
        <td>introduction</td>
        <td><%= @user.introduction %></td>
      </tr>
    </table>
      <%= link_to edit_user_path(@user.id) do %>
      <i class="fas fa-user-cog"></i>
      <% end %>
  </div>
  <div class = "New-book">
    <h2 class = "mt-3">New book</h2>
    <div class = "form">
      <%= form_with model:@book, local:true do |f| %>
    <div class = "new-book-title">
      <label for = "book_title">Title</label><br />
      <%= f.text_field :title %>
    </div>
    <div class = "new-book-body">
      <label for = "book_body">Opinion</label><br />
      <%= f.text_area :body %>
    </div>
    <div class = "new-book-body"><%= f.submit 'Create Book' , class: "btn btn-secondary" %></div>
    <% end %>
  </div>
</div>
</div>

<div class = "col-md-8 offset-md-1">
  <div class = "books-index">
    <h3>Books</h3>
    <table class = "table">
      <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          <th colspan = "3"></th>
        </tr>
      </thead>
      <tbody>
      <% @user.books.each do |book| %>
        <tr>
          <td><%= link_to user_path(book.user) do %>
            <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %>
            <% end %></td>
          <td><%= link_to book.title, book_path(book.id) %></td>
          <td><%= book.body %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
</div>
</div>